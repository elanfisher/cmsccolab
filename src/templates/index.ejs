<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CoLab</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CoLab</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Find Materials</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" href="/add">Add Materials</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" href="/cat">Get a Cat Fact</a>
                  </li>
              </ul>
            </div>
        </div>
    </nav>

    <!-- Lab materials catalog -->
    <!-- Header-->
    <header class="py-2 bg-success-subtle border border-success rounded-5">
      <div class="container px-4 px-lg-5 my-5">
          <div class="text-center text-body-secondary">
              <h1 class="display-4 fw-bolder">Welcome to CoLab</h1>
              <p class="lead fw-normal text-body-secondary mb-0">Lab Resource Sharing at UMD</p>
              <p class="fw-normal text-body-secondary mb-0">Colab is a program that will facilitate resource sharing between research groups, decrease waste, and promote inter-laboratory collaboration.</p>
          </div>
      </div>
  </header>

  <br><br>

  <!-- material listing -->
  <div class="container-fluid">
    <!-- search bar -->
    <div class="row justify-content-center">
      <div class="col-sm-5">
        <form action="/search" method="post">
          <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search for materials" aria-label="Search for materials" aria-describedby="button-addon2" name="search">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
          </div>
        </form>
    </div>

    <div class="row">
      <div class="col-sm-12">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center" id="items">
      
                  <%- materials %>
      
                </div>
            </div>
      </div>
    </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  
</body>
</html>